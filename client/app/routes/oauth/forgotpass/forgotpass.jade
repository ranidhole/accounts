.container.w-xl.w-auto-xs(ng-init='app.settings.container = false;')
  a.navbar-brand.block.m-t(href='')
    img(src='/images/logo.svg', alt='{{App.app.name}}')
  .m-b-xs
    .wrapper.text-center: strong Input your email to reset your password

    form(name='reset' ng-submit='Forgotpass.forgotpass()')
      .list-group.list-group-sm.m-b-md
        .list-group-item
          input.form-control.no-border(type='text' placeholder='Email' ng-model='Forgotpass.user.username' required)

      button.btn.btn-lg.btn-primary.btn-block(type='submit' ng-disabled='reset.$invalid') Send

    .m-t(uib-collapse='!Forgotpass.showSuccessAlert')
      .alert.alert-success
        p A reset link sent to your email address
          a.btn.btn-sm.btn-success(ui-sref='access.signin') Sign in

  .text-center
    footer
